<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context="ir.hhadanooo.persianshare.add_friend.addFriendActivity">

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewTop"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewTop"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:id="@+id/textHelpInvited"
            android:layout_gravity="center_horizontal"
            android:text="@string/send_persianshare_android_devices_without_mobile_charges"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/bt_button"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view_bottom_btn_bluetooth"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="#919191"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_QR_code"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textHelpQR"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/scan_the_qr_code_tho_download_persianshare"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view_bottom_qrcode"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="#919191"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textHelpDown"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/download_from_the_official_website"
            />

        <TextView
            android:id="@+id/link_Down"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="It is under repair!!"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/view_bottom_link"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"
            android:background="#919191"/>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/more"
        android:textColor="#555555"
        android:id="@+id/btn_more_add_friends"/>


</RelativeLayout>

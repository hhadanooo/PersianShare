<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backconnect"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
        android:id="@+id/view_top_tv_scaner"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Please scan for connect to device receiver."
        android:id="@+id/help_scan_connect_receiver"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/view_top_scaner"
        />



    <me.dm7.barcodescanner.zxing.ZXingScannerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/barcode"
        android:layout_gravity="center_horizontal"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/view_top_view_center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please write text in device receiver"
        android:layout_gravity="center_horizontal"
        android:id="@+id/help_write_connect_receiver"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/view_top_et_write"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/et_enter_pass_name"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:padding="10dp"/>



</LinearLayout>

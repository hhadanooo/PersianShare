<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginStart="3dp"
    android:id="@+id/lay_bottom_sheet"
    android:layoutDirection="ltr">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:scaleType="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/icon_file_bottom_sheet"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/icon_file_bottom_sheet"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/name_file_bottom_sheet"
                android:layout_gravity="center_vertical"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:typeface="sans"
                android:textColor="#5C5C5C"
                android:layout_gravity="center_vertical"
                android:id="@+id/name_file_show_bottom_sheet" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-3dp"
                android:typeface="sans"
                android:textColor="#5C5C5C"
                android:id="@+id/size_file_bottom_sheet" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lay_delete_bottom_sheet"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/xicon"
                android:id="@+id/delete_bottom_sheet"
                tools:ignore="ContentDescription,RtlHardcoded" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>